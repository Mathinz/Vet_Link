<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="visible">




        <Button
            android:id="@+id/img_google_login_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:background="#DD4B39"
            android:text="@string/login_with_google"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <Button
            android:id="@+id/img_fb_login_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:background="#3a5795"
            android:text="@string/login_with_facebook"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="394dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10sp"
            android:weightSum="10">

            <EditText
                android:id="@+id/edt_email_id"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                android:background="@drawable/edt_bg"
                android:gravity="center|start"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:scrollbars="none" />


            <EditText
                android:id="@+id/edt_password_id"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                android:background="@drawable/edt_bg"
                android:gravity="center|start"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:scrollbars="none" />

            <Button
                android:id="@+id/reset_password"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="275sp"
                android:layout_marginLeft="275sp"
                android:background="#ffff"
                android:onClick="onClick"
                android:text="Password Reset"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/borderlessButtonStyle" />
            <Button
                android:id="@+id/img_main_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15sp"
                android:background="#ffd54f"
                android:onClick="onClick"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/img_main_guest_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15sp"
                android:background="#ffd54f"
                android:text="@string/guest"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/img_main_signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15sp"
                android:background="#ffd54f"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>